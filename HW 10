print("\t\tMembers only!\n")

security = 0

username = ""
while not username:
    username = input("Username: ")
    
password = ""
while not password:
    password = input("Password: ")
    
if username == "M.Dawson" and password == "secret":
    print("Hi, Mike.")
    security = 5
elif username == "S.Meier" and password == "civilization":
    print("Hey, Sid.")
    secuirty = 3
